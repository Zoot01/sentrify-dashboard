{
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "layout/*": ["src/layout/*"],
      "store/*": ["src/store/*"],
      "views/*": ["src/views/*"],
      "types/*": ["src/types/*"],
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "config/*": ["src/config/*"],
      "services/*": ["src/services/*"],
      "routes/*": ["src/routes/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./node.json" }]
}
